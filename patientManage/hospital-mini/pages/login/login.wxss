/* 登录页面样式 */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #4A90E2 5%, #9e87b6 100%);
  padding-right: 40rpx;
  padding-left: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 30rpx;
  backdrop-filter: blur(10rpx);
}

.logo-icon {
  font-size: 60rpx;
  color: #FFFFFF;
}

.app-title {
  display: block;
  font-size: 48rpx;
  color: #FFFFFF;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.app-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 登录表单 */
.login-form {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  backdrop-filter: blur(10rpx);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 12rpx;
  font-weight: bold;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333333;
  background: #FFFFFF;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #4A90E2;
}

.code-input-group {
  display: flex;
  gap: 20rpx;
}

.code-input {
  flex: 1;
}

.code-btn {
  width: 200rpx;
  height: 80rpx;
  background: #4A90E2;
  color: #FFFFFF;
  border: none;
  border-radius: 8rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.code-btn.sent {
  background: #999999;
}

/* 登录类型切换 */
.login-type-switch {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}

.switch-text {
  font-size: 28rpx;
  color: #666666;
  padding: 10rpx 20rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.switch-text.active {
  color: #4A90E2;
  font-weight: bold;
}

.switch-divider {
  font-size: 28rpx;
  color: #DDDDDD;
  margin: 0 20rpx;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 88rpx;
  background: #4A90E2;
  color: #FFFFFF;
  border: none;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.login-btn:disabled {
  background: #CCCCCC;
  color: #999999;
}

/* 角色选择 */
.role-selector {
  margin-bottom: 30rpx;
}

.role-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.role-options {
  display: flex;
  gap: 20rpx;
}

.role-option {
  flex: 1;
  height: 120rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  background: #FFFFFF;
}

.role-option.active {
  border-color: #4A90E2;
  background: #E3F2FD;
}

.role-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.role-text {
  font-size: 26rpx;
  color: #333333;
}

.role-option.active .role-text {
  color: #4A90E2;
  font-weight: bold;
}

/* 协议同意 */
.agreement {
  display: flex;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.agreement-checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #DDDDDD;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  margin-top: 2rpx;
  flex-shrink: 0;
}

.checkbox-icon {
  margin-bottom: 50rpx;
  font-size: 40rpx;
  color: #FFFFFF;
}

.checkbox-icon.checked {
  border-color: #4A90E2;
}

.agreement-text {
  font-size: 26rpx;
  color: #111111;
  line-height: 1.5;
}

.agreement-link {
  color: #1268ca;
  text-decoration: underline;
}

/* 其他登录方式 */
.other-login {
  text-align: center;
}

.other-login-text {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 20rpx;
}

.other-login-buttons {
  display: flex;
  justify-content: center;
}

.other-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 8rpx;
  color: #FFFFFF;
  font-size: 26rpx;
  backdrop-filter: blur(10rpx);
}

.other-btn-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.other-btn-text {
  font-size: 26rpx;
} 