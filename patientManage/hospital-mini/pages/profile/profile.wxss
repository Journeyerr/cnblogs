/* 个人中心页面样式 */
.container {
  padding: 20rpx;
  background: #F5F5F5;
}

/* 用户信息头部 */
.user-header {
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #4A90E2;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.avatar-text {
  color: #FFFFFF;
  font-size: 40rpx;
  font-weight: bold;
}

.user-info {
  flex: 1;
  margin-right: 20rpx;
}

.user-name {
  display: block;
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-role {
  display: block;
  font-size: 26rpx;
  color: #4A90E2;
  background: #E3F2FD;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  width: fit-content;
  margin-bottom: 8rpx;
}

.user-phone {
  display: block;
  font-size: 26rpx;
  color: #666666;
}

.user-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #F5F5F5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon {
  font-size: 28rpx;
  color: #666666;
}

/* 统计信息 */
.stats-section {
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.stats-item {
  flex: 1;
  text-align: center;
}

.stats-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #4A90E2;
  margin-bottom: 8rpx;
}

.stats-label {
  display: block;
  font-size: 24rpx;
  color: #666666;
}

/* 菜单区域 */
.menu-section {
  margin-bottom: 20rpx;
}

.menu-group {
  background: #FFFFFF;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
  transition: background-color 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #F5F5F5;
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  background: #F5F5F5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
  font-size: 32rpx;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
}

.menu-arrow {
  font-size: 24rpx;
  color: #CCCCCC;
}

.menu-switch {
  transform: scale(0.8);
}

/* 设置区域 */
.settings-section {
  margin-bottom: 20rpx;
}

/* 退出登录 */
.logout-section {
  margin-top: 40rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: #FF4757;
  color: #FFFFFF;
  border: none;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.logout-btn:active {
  background: #E63946;
} 